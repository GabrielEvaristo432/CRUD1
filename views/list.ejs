<!DOCTYPE html>
<html lang="pt">

<head>
  <meta charset="utf-8">
  <title>CRUD de Produtos</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="/js/id.js"></script>
</head>

<body>
  <div class="container">
    <h1>Lista de Produtos</h1>
      <% if(inserido) { %>
        <h1>Produto adicionado com sucesso</h1>
      <% } %>

        <% if(removido) { %>
          <h1>Produto removido com sucesso</h1>
          <% } %>
            <table>
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Tipo</th>
                  <th>Quantidade</th>
                  <th>Unidade de medida</th>
                  <th>Lote</th>
                  <th>Fornecedor</th>
                  <th>Valor</th>
                </tr>
              </thead>
              <tbody>
                <form method="post">
                  <% docs.forEach(doc=> { %>
                    <tr>
                      <td>
                        <%= doc.nome %>
                      </td>
                      <td>
                        <%= doc.tipo %>
                      </td>
                      <td>
                        <%= doc.quantidade %>
                      </td>
                      <td>
                        <%= doc.unidadeDeMedida%>
                      </td>
                      <td>
                        <%= doc.lote %>
                      </td>
                      <td>
                        <%= doc.fornecedor %>
                      </td>
                      <td>
                        R$ <%= doc.valor %>
                      </td>
                      <td>
                        <button
                          class="btn-editar"
                          type="submit"
                          formaction="/produtos/edit"
                          onclick="setHiddenId ('<%= doc._id  %>')"
                        > Editar</button>
                        <button
                          class="btn-excluir"
                          type="submit"
                          formaction="/produtos/delete"
                          onclick="setHiddenId ('<%= doc._id  %>')"
                          delete
                        >Excluir</button>
                      </td>
                    </tr>
                    <% }); %>
                    <input type="hidden" id="hiddenid" name="hiddenid" >
                </form>

              </tbody>
              <tfoot>
                <tr>
                  <td colspan="4"><a href="/produtos/add"><button type="button">Novo</button></a></td>
                </tr>
              </tfoot>
            </table>
  </div>
</body>
</html>
